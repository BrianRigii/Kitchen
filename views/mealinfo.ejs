<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/mealinfo.css" />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark red">
      <a class="navbar-brand" href="/index"><strong>KITCHEN</strong></a>
      <form action="/find" method="POST" class="ml-auto">
        <input
          type="search"
          name="search"
          id="search-box"
          placeholder="search"
          class="search-box"
        />
      </form>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/index/cartegories"
              >Cartegories <span class="sr-only">(current)</span></a
            >
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/index/user"><%=currentUser.username%></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/logout">Log Out</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-4 p-0">
          <img
            src="<%=mealdata.meals[0].strMealThumb%>"
            alt=""
            class="img-fluid"
          />
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h1 class="card-title title"><%=mealdata.meals[0].strMeal%></h1>
              <h6 class="card-subtitle text-muted"><%=mealdata.meals[0].strArea%> Cuisine</h6>
              <p class="ing-title">
                ingredients
                <span class="float-right">
                  <a href="<%=mealdata.meals[0].strYoutube%>">
                    <img
                    src="/svg/tube.svg"
                    alt="youtube"
                    height="40px"
                  />
                  </a>
                  
              </span>
              </p>

              <% for(key in mealdata.meals[0]){
              if(key.indexOf("strIngredient")==0){ %> <% if(
              mealdata.meals[0][key] != "" && mealdata.meals[0][key] != null){
              %>

              <ul style="list-style-type: none;">
                <li><input type="checkbox" name="" id="">   <%= mealdata.meals[0] [key]%></li>
              </ul>
              <%}%> <% } %> <% } %>
              <a href="#" class="btn btn-danger btn-block">Start Cooking</a>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
